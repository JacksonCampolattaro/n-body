<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="adwaita" version="1.0"/>

    <object class="GtkListBox" id="root">

        <property name="selection-mode">none</property>
        <style>
            <class name="boxed-list"/>
        </style>
        <child>
            <object class="AdwActionRow">
                <property name="title">G</property>
                <property name="subtitle">Constant of gravity</property>
                <child type="suffix">
                    <object class="GtkSpinButton" id="GFloatEntry">
                        <property name="hexpand">0</property>
                        <property name="vexpand">0</property>
                        <property name="valign">center</property>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="AdwActionRow">
                <property name="title">T</property>
                <property name="subtitle">Time step size</property>
                <child type="suffix">
                    <object class="GtkSpinButton">
                        <property name="hexpand">0</property>
                        <property name="vexpand">0</property>
                        <property name="valign">center</property>
                    </object>
                </child>
            </object>
        </child>
    </object>

</interface>
