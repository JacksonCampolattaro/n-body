<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="adwaita" version="1.0"/>

    <object class="GtkBox" id="root">
        <property name="orientation">vertical</property>
        <property name="hexpand">True</property>
        <property name="spacing">16</property>

        <child>
            <object class="AdwPreferencesGroup">
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Position</property>
                        <!--                <property name="subtitle">The location of the camera</property>-->
                        <child type="suffix">
                            <object class="GtkButton" id="camera-position-entry"/>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Direction</property>
                        <!--                <property name="subtitle">The direction the camera faces</property>-->
                        <child type="suffix">
                            <object class="GtkButton" id="camera-direction-entry"/>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Zoom</property>
                        <child type="suffix">
                            <object class="GtkSpinButton" id="camera-zoom-entry"/>
                        </child>
                    </object>
                </child>
            </object>
        </child>


        <child>
            <object class="AdwPreferencesGroup">
                <property name="title">Style</property>
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Background Color</property>
                        <property name="subtitle">The color of empty space</property>
                        <child type="suffix">
                            <object class="GtkColorButton" id="background-color-entry">
                                <property name="hexpand">0</property>
                                <property name="vexpand">0</property>
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwComboRow" id="shader-dropdown">
                        <property name="title">Shader</property>
                        <property name="subtitle">Approach used to render particles</property>
                        <property name="model">
                            <object class="GtkStringList">
                                <items>
                                    <item>Instanced Phong</item>
                                    <item>Phong</item>
                                    <item>Instanced Flat</item>
                                    <item>Flat</item>
                                </items>
                            </object>
                        </property>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="AdwPreferencesGroup">
                <property name="title">Recording</property>
                <child type="header-suffix">
                    <object class="GtkCheckButton" id="record-button"/>
                </child>
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Resolution</property>
                        <child type="suffix">
                            <object class="GtkBox">
                                <property name="vexpand">False</property>
                                <property name="valign">center</property>

                                <child>
                                    <object class="GtkSpinButton" id="recording-x-size-entry"/>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label"> Ã— </property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkSpinButton" id="recording-y-size-entry"/>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>

</interface>
