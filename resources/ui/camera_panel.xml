<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="adwaita" version="1.0"/>

    <object class="GtkListBox" id="root">
        <property name="selection-mode">none</property>
        <style>
            <class name="boxed-list"/>
        </style>
        <child>
            <object class="AdwActionRow">
                <property name="title">Position</property>
<!--                <property name="subtitle">The location of the camera</property>-->
                <child type="suffix">
                    <object class="GtkButton" id="CameraPositionEditable"/>
                </child>
            </object>
        </child>
        <child>
            <object class="AdwActionRow">
                <property name="title">Direction</property>
<!--                <property name="subtitle">The direction the camera faces</property>-->
                <child type="suffix">
                    <object class="GtkButton" id="CameraDirectionEditable"/>
                </child>
            </object>
        </child>
        <child>
            <object class="AdwActionRow">
                <property name="title">Zoom</property>
                <child type="suffix">
                    <object class="GtkSpinButton" id="CameraZoomFloatEntry"/>
                </child>
            </object>
        </child>
        <child>
            <object class="AdwActionRow">
                <property name="title">Background Color</property>
                <property name="subtitle">The color of empty space</property>
                <child type="suffix">
                    <object class="GtkColorButton" id="BackgroundColorButton">
                        <property name="hexpand">0</property>
                        <property name="vexpand">0</property>
                        <property name="valign">center</property>
                    </object>
                </child>
            </object>
        </child>
    </object>

</interface>
