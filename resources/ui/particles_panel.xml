<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="adwaita" version="1.0"/>

    <object class="GtkBox" id="root">
        <property name="orientation">vertical</property>
        <property name="hexpand">True</property>
        <property name="spacing">16</property>

        <child>
            <object class="GtkListBox">
                <property name="selection-mode">none</property>
                <style>
                    <class name="boxed-list"/>
                </style>
                <child>
                    <object class="AdwActionRow">
                        <property name="title">List view</property>
                        <property name="subtitle">Explore loaded particles in tabular form</property>
                        <child type="suffix">
                            <object class="GtkButton" id="modify-button">
                                <property name="hexpand">0</property>
                                <property name="vexpand">0</property>
                                <property name="valign">center</property>
                                <property name="label">Open</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="GtkLabel">
                <property name="label">Statistics</property>
                <property name="halign">start</property>
                <style>
                    <class name="title-4"/>
                </style>
            </object>
        </child>

        <child>
            <object class="GtkFrame">

                <child>
                    <object class="GtkBox" id="box">
                        <property name="orientation">vertical</property>
                        <property name="hexpand">True</property>
                        <property name="spacing">8</property>
                        <property name="margin-top">16</property>
                        <property name="margin-bottom">16</property>
                        <property name="margin-start">16</property>
                        <property name="margin-end">16</property>

                        <child>
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="hexpand">True</property>
                                <property name="spacing">8</property>

                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Particle Count:</property>
                                        <property name="halign">start</property>
                                        <style>
                                            <class name="dim-label"/>
                                        </style>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="count-label">
                                        <style>
                                            <class name="numeric"/>
                                        </style>
                                        <property name="label">0</property>
                                        <property name="halign">end</property>
                                        <property name="hexpand">True</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="hexpand">True</property>
                                <property name="spacing">8</property>

                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Average position:</property>
                                        <property name="halign">start</property>
                                        <style>
                                            <class name="dim-label"/>
                                        </style>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkBox" id="average-position-view">
                                        <property name="halign">end</property>
                                        <property name="hexpand">True</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="GtkSeparator"/>
                        </child>

                        <child>
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="hexpand">True</property>
                                <property name="spacing">8</property>

                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Total mass:</property>
                                        <property name="halign">start</property>
                                        <style>
                                            <class name="dim-label"/>
                                        </style>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="total-mass-label">
                                        <style>
                                            <class name="numeric"/>
                                        </style>
                                        <property name="label">0.00</property>
                                        <property name="halign">end</property>
                                        <property name="hexpand">True</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="hexpand">True</property>
                                <property name="spacing">8</property>

                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Center of mass:</property>
                                        <property name="halign">start</property>
                                        <style>
                                            <class name="dim-label"/>
                                        </style>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkBox" id="center-of-mass-position-view">
                                        <property name="halign">end</property>
                                        <property name="hexpand">True</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="GtkSeparator"/>
                        </child>

                        <child>
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="hexpand">True</property>
                                <property name="spacing">8</property>

                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Interaction count:</property>
                                        <property name="halign">start</property>
                                        <style>
                                            <class name="dim-label"/>
                                        </style>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="interaction-count-label">
                                        <style>
                                            <class name="numeric"/>
                                        </style>
                                        <property name="label">0</property>
                                        <property name="halign">end</property>
                                        <property name="hexpand">True</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                    </object>
                </child>
            </object>
        </child>

    </object>

    <object class="GtkActionBar" id="action-bar">
        <property name="hexpand">1</property>
        <property name="vexpand">0</property>
        <child type="end">
            <object class="GtkButton" id="open-button">
                <property name="child">
                    <object class="AdwButtonContent">
                        <property name="icon-name">document-open</property>
                        <property name="label" translatable="yes">_Open</property>
                        <property name="use-underline">True</property>
                    </object>
                </property>
            </object>
        </child>
        <child type="end">
            <object class="GtkButton" id="save-button">
                <property name="child">
                    <object class="AdwButtonContent">
                        <property name="icon-name">document-save</property>
                        <property name="label" translatable="yes">_Save</property>
                        <property name="use-underline">True</property>
                    </object>
                </property>
            </object>
        </child>
    </object>

</interface>
